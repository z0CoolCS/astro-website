---
const { platform, username } = Astro.props;
---
<a href={`https://www.${platform}.com/${username}`}>{platform}</a>

<style>
    a {
      padding: 0.5rem 1rem;
      margin: 1%;
      color: white;
      background-color: #4c1d95;
      text-decoration: none;
      border-radius: 40%;
    }
    a:hover{
      background-color: bisque;
      color: black;

    }
  </style>